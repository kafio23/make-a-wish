<!DOCTYPE html>
<html>
  <head>
    <title>MakeAWish</title>
    <%= csrf_meta_tags %>
    
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <div class="ui teal three item inverted menu">
      <%= link_to 'All', wishes_path, {:class => "item active"} %>
      <%= link_to 'Answered', answered_wishes_path, {:class => "item"} %>
      
      <% if current_user %>
        <%= link_to 'Family', users_path, {:class => "item"} %>
      <% else %>
        <%= link_to 'Log In', login_path, {:class => "item"} %>
      <% end %>

    </div>
    <div class="main ui container">
      <%= yield %>
    </div>  
  </body>
</html>